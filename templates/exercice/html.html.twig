    {#Script lié au TIMER#}
    <script>

    let startValue = false;

    $('#start').click(() =>{
        if(startValue === false){
            chronoStart();
            startValue = true;
        }
    });



    var startTime = 0;
    var start = 0;
    var end = 0;
    var diff = 0;
    var timerID = 0;
    var old_time = parseInt('{{timer}}');

    function chrono(){
        end = new Date() ;
        diff = (end - start) + old_time;
        diff = new Date(diff);
        var sec = diff.getSeconds();
        var min = diff.getMinutes();
        var hr = diff.getHours()-1;
        if (min < 10){
            min = "0" + min
        }
        if (sec < 10){
            sec = "0" + sec
        }

        document.getElementById("chronotime").value = hr + ":" + min + ":" + sec ;
        timerID = setTimeout("chrono()", 10)
    }

    function chronoStart(){
        start = new Date()
        chrono()
    }

    function chronoStop(){
        clearTimeout(timerID)
    }

    function chronoContinue(){
        start = new Date()-diff;
        start = new Date(start);
        chrono()
    }

    // Observe le passage de la div de victoire en show et coupe le timer
    var observer = new MutationObserver(() =>{
         chronoStop();
         let finalTime = $('#chronotime').val();
         let ex_id = '{{exercice.id}}';
         let user = '{{app.user.id}}';

          $.ajax({
                    type: 'POST',
                    url: '{{ path("ajaxTimer") }}',
                    data: {'timer' : finalTime, 'ex': ex_id, 'user' : user},
                    timeout: 8000,
                    dataType: 'html',
                    success : function(data){
                        console.log(data);

                    },
                    error : function(error){
                        console.log(error)
                    }
                });
    });

        observer.observe(successEnd, {attributes : true});

    //Fin observation


    </script>
