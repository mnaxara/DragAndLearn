{% block title %}
Page d'accueil
{%endblock%}

{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
                <div class="toast-header">
                    <strong class="mr-auto">Administrateur</strong>
                    <small>Welcome!</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Bienvenue sur Drag&Learn !
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p>Sauvegarde pour {{ save.exercices.libelle }} existante</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h5>Exercice en cours</h5>
            <ul>
                {% set i = 1 %}
                {% for save in last_save %}
                    {% if save[1] is not null %}
                        <li>Niveau {{ i }} : Exercice {{ save[1] }}</li>
                    {% else %}
                        <li>Niveau {{ i }} non commenc√©</li>
                    {% endif %}

                    {% set i = i+1 %}
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}

<script>
    $(function() {

        $('.toast').toast('show');
    });
</script>

{% endblock %}
