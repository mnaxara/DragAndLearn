{% extends 'base.html.twig' %}

{% block title %}Choix du niveau{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset("css/levelChoice.css") }}>
    {# LIBRARY #}
    <link rel="stylesheet" href={{ asset("lib/swipper/dist/css/swiper.min.css") }}>
{% endblock %}

{% block body %}
<div class="blockLevelChoice">
    <div class="row">
        <div class="col-md-1 bg-light py-4 border-right border-dark"></div>
        <div class="col-md-11 py-4"></div>
    </div>
    <div class="row levelChoice">
        <div class="col-md-1 bg-light">
            <div class="row code-name">
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <i class="fab fa-html5"></i>
                </div>
            </div>
            <div class="row code-name">
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <i class="fab fa-css3-alt"></i>
                </div>
            </div>
            <div class="row code-name">
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <i class="fab fa-js-square"></i>
                </div>
            </div>
        </div>
        <div class="col-md-11">
            {# LEVEL 1 #}
            <div class="row level">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h2>
                                <svg height="10" width="100px">
                                    <line x1="0" y1="0" x2="250" style="stroke:rgb(0,0,0);stroke-width:2" />
                                </svg>
                                <span style="color: orangered">HTML</span>
                                <svg height="2" width="100px">
                                    <line x1="0" y1="0" x2="250" style="stroke:rgb(0,0,0);stroke-width:2" />
                                </svg>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        {# SLIDER #}
                        <div class="col-12">
                            <div class="swiper-container">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html1.png') }}); background-size: contain">div/span/p</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html2.png') }}); background-size: contain">h1/br/hr</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html3.png') }}); background-size: contain">a/button</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html4.png') }}); background-size: contain">img</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html5.png') }}); background-size: contain">ol/ul</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html6.png') }}); background-size: contain">table</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html7.png') }}); background-size: contain">form</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html8.png') }}); background-size: contain">multi 1</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html9.png') }}); background-size: contain">multi 2</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/html10.png') }}); background-size: contain">CV</div>
                                    </div>
                                </div>
                                <!-- Add Pagination -->
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# LEVEL 2 #}
            <div class="row level">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h2>
                                <svg height="10" width="100px">
                                    <line x1="0" y1="0" x2="250" style="stroke:rgb(0,0,0);stroke-width:2" />
                                </svg>
                                <span style="color:orangered">HTML</span>/<span style="color:#007bff">CSS</span>
                                <svg height="2" width="100px">
                                    <line x1="0" y1="0" x2="250" style="stroke:rgb(0,0,0);stroke-width:2" />
                                </svg>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        {# SLIDER #}
                        <div class="col-12">
                            <div class="swiper-container">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <a href="#"><div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css1.png') }}); background-size: contain">class/id</div></a>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css2.png') }}); background-size: contain">select</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css3.png') }}); background-size: contain">color</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css4.png') }}); background-size: contain">font</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css5.png') }}); background-size: contain">border</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css6.png') }}); background-size: contain">margin</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css7.png') }}); background-size: contain">width</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css8.png') }}); background-size: contain">background</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css9.png') }}); background-size: contain">position</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide" style="background-image: url({{ asset('uploads/image/ExThumbnails/css10.png') }}); background-size: contain">Batman</div>
                                    </div>
                                </div>
                                <!-- Add Pagination -->
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# LEVEL 3 #}
            <div class="row level">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h2>
                                <svg height="10" width="100px">
                                    <line x1="0" y1="0" x2="250" style="stroke:rgb(0,0,0);stroke-width:2" />
                                </svg>
                                <span style="color:orangered">HTML</span>/<span style="color:#007bff">CSS</span>/<span style="color:#dbc608">JS</span>
                                <svg height="2" width="100px">
                                    <line x1="0" y1="0" x2="250" style="stroke:rgb(0,0,0);stroke-width:2" />
                                </svg>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        {# SLIDER #}
                        <div class="col-12">
                            <div class="swiper-container">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 1</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 2</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 3</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 4</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 5</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 6</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 7</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 8</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 9</div>
                                    </div>
                                    <div class="swiper-slide">
                                        <div class="gif-slide">Slide 10</div>
                                    </div>
                                </div>
                                <!-- Add Pagination -->
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block javascripts %}
    <!-- Swiper JS -->
    <script src={{ asset("lib/swipper/dist/js/swiper.min.js") }}></script>

    <!-- Initialize Swiper -->
    <script>
        let swiper = new Swiper('.swiper-container', {
            slidesPerView: 4,
            centeredSlides: false,
            spaceBetween: 30,
            grabCursor: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
        });
    </script>
{% endblock %}
