        {# colonne trophés #}
        <div class="col-12 col-md-8" id="gain">

            {# user #}
            <div class="row" id="userTitle">
                <h3>
                {{ user.avatar }}
                {{ user.username }}
                </h3>
            </div>

            {# trophées #}
            <div class="row">
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
                <div class="col-md-2">
                    <div class="trophy"></div>
                </div>
